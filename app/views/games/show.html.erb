<div class="top-margin">
  <div class="container">
    <h1 class="headline"><%= @game %></h1>
    <% @streams.each_slice(3) do |three_streams| %>
      <div class="row">
        <% three_streams.each do |stream| %>
          <div class="col-md-4 <%= stream.name %> stream-card">
            <%= link_to stream_path(stream.name) do %>
            <img class="stream-image" src="<%= stream.preview %>"/>
            <% end %>
            <p class="stream-caption">
              <span class="oswald"><%= stream.viewers %></span>
              viewers watching
              <span class="oswald"><%= stream.name %></span>
            </p>
            <p class="stream-description"><%= stream.description %></p>
            <%= link_to_follow(stream.name) %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
