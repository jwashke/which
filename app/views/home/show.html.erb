<div class="top-margin">
  <div class="container">
    <div class="row">
      <% if current_user %>
        <h1>Your followed streams</h1>
      <% else %>
        <h1>Featured Streams</h1>
      <% end %>
    </div>
    <% @streams.each_slice(3) do |three_streams| %>
      <div class="row">
        <% three_streams.each do |stream| %>
          <div class="col-md-4">
            <img src="<%= stream.preview %>"/>
            <h5><%= stream.name %></h5>
            <p>Viewers: <%= stream.viewers %></p>
            <p><%= stream.description %></p>
            <%= link_to_unfollow(stream.name) %>
            <%= link_to "View Stream", stream_path(stream.name) %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
